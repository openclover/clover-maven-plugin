<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.atlassian.maven.plugins</groupId>
  <artifactId>maven-clover2-plugin-it-somesrcexcluded</artifactId>
  <packaging>jar</packaging>
  <name>Maven Clover Plugin Some Src Excluded Sample</name>
  <description>Maven Clover Plugin Some Src Excluded Sample -- test for MCLOVER-79</description>
  <version>1.0-SNAPSHOT</version>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <reporting>
    <excludeDefaults>true</excludeDefaults>
    <plugins>
      <plugin>
        <groupId>com.atlassian.maven.plugins</groupId>
        <artifactId>maven-clover2-plugin</artifactId>
          <configuration>
                <licenseLocation>${clover.licenseLocation}</licenseLocation>
          </configuration>
      </plugin>
    </plugins>
  </reporting>
  <build>
    <plugins>
      <plugin>
        <groupId>com.atlassian.maven.plugins</groupId>
        <artifactId>maven-clover2-plugin</artifactId>
        <configuration>
              <licenseLocation>${clover.licenseLocation}</licenseLocation>
          <excludes><exclude>**/exclude/*.java</exclude></excludes>
        </configuration>
        <executions>
          <execution>
            <id>main</id>
            <phase>verify</phase>
            <goals>
              <goal>instrument</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

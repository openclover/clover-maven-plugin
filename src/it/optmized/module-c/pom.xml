<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.atlassian.maven.plugins.sample</groupId>
        <artifactId>clover-sample-optimized</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>clover-sample-optimized-modulec</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>modulec</name>
    <url>http://maven.apache.org</url>
    <build>
        <plugins>
            <plugin>
                <groupId>org.openclover</groupId>
                <artifactId>clover-maven-plugin</artifactId>
                <configuration>
                    <singleCloverDatabase>true</singleCloverDatabase>
                    <snapshot>${project.build.directory}/clover.snapshot</snapshot>
                    <forceSnapshot>true</forceSnapshot>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
